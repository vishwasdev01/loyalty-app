<p id="notice"><%= notice %></p>

<h1>User Rewards</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Reward</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_rewards.each do |user_reward| %>
      <tr>
        <td><%= user_reward.user_id %></td>
        <td><%= user_reward.reward_id %></td>
        <td><%= link_to 'Show', user_reward %></td>
        <td><%= link_to 'Edit', edit_user_reward_path(user_reward) %></td>
        <td><%= link_to 'Destroy', user_reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

